<?xml version="1.0"?>
<ruleset name="MyProject">
    <description>Symfony Rest-ful APIs Products Module Coding Standards</description>

    <!-- Set the default standard -->
    <arg name="standard" value="PSR12"/>

    <!-- Define target directories -->
    <file>config</file>
    <file>src</file>
    <file>tests</file>

    <!-- Exclude directories -->
    <exclude-pattern>var/*</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>
</ruleset>

